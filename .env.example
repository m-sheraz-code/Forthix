# ===========================================
# Forthix Trading Platform - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# -------------------------------------------
# Supabase Configuration (Required)
# -------------------------------------------
# Get these from: https://app.supabase.com/project/_/settings/api

# Your Supabase project URL
SUPABASE_URL=https://your-project-id.supabase.co

# Public anon key (safe for client-side, but we use it server-side only)
SUPABASE_ANON_KEY=your-supabase-anon-key

# Service role key (server-side only, NEVER expose to client)
# Required for admin operations like user management
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# -------------------------------------------
# Yahoo Finance Configuration (Optional)
# -------------------------------------------
# The yahoo-finance2 package doesn't require an API key
# These settings control caching behavior

# Cache TTL for real-time market data (in seconds)
YAHOO_CACHE_TTL_REALTIME=60

# Cache TTL for historical data (in seconds)
YAHOO_CACHE_TTL_HISTORICAL=300

# -------------------------------------------
# Application Settings (Optional)
# -------------------------------------------

# JWT secret for additional token signing (if needed)
# JWT_SECRET=your-jwt-secret-here

# Environment (development, production)
NODE_ENV=development
